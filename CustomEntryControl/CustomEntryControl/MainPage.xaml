<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:CustomEntryControl.Helpers"
             x:Class="CustomEntryControl.MainPage">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="20">
        <local:CustomEntry HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Text="Teste!!!" Shadow="True" x:Name="CustomEntry"
                           IconSvg="CustomEntryControl.Resources.Icons.email.svg" CornerRadius="20" ReturnType="Done"
                           ContentPadding="10, 1" BorderWidth="1.8, 1" BorderColor="Black" FocusedBorderColor="Accent"/>
    </StackLayout>

</ContentPage>
